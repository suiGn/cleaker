<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Choose New Password</title>

    <!-- Favicon -->
    <link rel="icon" href="../../sl/dist/media/img/favicon.png" type="image/png">
    <!-- Bundle Styles -->
    <link rel="stylesheet" href="../../sl/vendor/bundle.css">
    <!-- App styles -->
    <link rel="stylesheet" href="../../sl/dist/css/app.min.css">
</head>
<body class="form-membership">

<div class="form-wrapper">

    <!-- logo -->
    <div class="logo">
       <a href="/">  <img src="media/imgs/blue_helm2.png" width="55" height="" alt="Blue Helm"> </a>
    </div>
    <!-- ./ logo -->

    <h5>Choose New Password</h5>
<p class="content-block" style="font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif; box-sizing: border-box; color: #3f5db3; font-size: 14px; vertical-align: top; margin: 0; padding: 10px 10px;" valign="top"><%= opt %><p>
    <!-- form -->
    <form method="post" action="/resetPwd">
    <div class="form-group">
		<input type="password" style="display: none;" name="uuid" value="<%= opt1 %>">
		<input type="password" style="display: none;" name="email" value="<%= opt %>">
    <input type="password" class="form-control" name="password" placeholder="Choose New Password." required autofocus>
	<input type="password" class="form-control" name="rtpass" placeholder="Re-type New Password." required autofocus>
    </div>
    <button class="btn btn-primary btn-block">Submit</button>
    <hr>
        <p class="text-muted">Take a different action.</p>
        <a href="/subscribe" class="btn btn-sm btn-outline-light mr-1">Subscribe!</a>
        or
        <a href="/" class="btn btn-sm btn-outline-light ml-1">Login!</a>
    </form>
    <!-- ./ form -->

</div>

<!-- Bundle -->
<script src="../../sl/vendor/bundle.js"></script>
<!-- App scripts -->
<script src="../../sl/dist/js/app.min.js"></script>
</body>
</html>